<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1543840950-e6529649ce74?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80);">
  <div class="container">
    <h1>InstruShare</h1>
    <p>Rent musical instruments and share them!</p>
  </div>
</div>


<div class="">
  <div class="main-container">
    <div class="instrument-cards mt-3">
      <% @instruments.each do |instrument| %>
        <div class="card" style="width: 250px;">
          <% if instrument.photos.attached?%>
            <%= cl_image_tag instrument.photos.first.key, height: 300, width: 400, crop: :fill, class: "card-img-top" %>
          <% else %>
            <img class="card-img-top" src="https://images.unsplash.com/photo-1541689592655-f5f52825a3b8?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=302&q=80" alt="Card image cap">
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= instrument.style %></h5>
            <p class="card-text"><%= instrument.description %></p>
          <%= link_to "See details", instrument_path(instrument)  %>
          </div>
        </div>
      <% end %>
    </div>
      
    <div id="map"
      style="width: 100%; height: 600px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</div>

