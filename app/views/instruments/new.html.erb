<div class="container mt-5" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1543840950-e6529649ce74?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80);">
  <%= simple_form_for(@instrument) do |f| %>
    <%= f.input :style, collection: Instrument.styles %>
    <%= f.input :description %>
    <%= f.input :location %>
    <%= f.input :rate %>
    <%= f.input :photos, as: :file, input_html: { multiple: true } %>
  <%= f.submit  %>
  <% end %>
</div>